<script type="text/javascript">
    var space = document.getElementById('space'),
        oPar = document.getElementById('wrap'),
        img = document.getElementById('img'),
        btnGroup = document.getElementById('btnGroup'),
        btnGroupFlex = document.getElementById('btnGroupFlex'),
        dom = document.getElementById('dome'),
        oActive = document.getElementById('btnActive'),
        cLen = document.getElementById('wrap').getElementsByClassName('showbox').length,
        oBox = document.getElementById('wrap').getElementsByClassName('showbox');
    oPar.style.width = (100*cLen)+'%';
    for(var i= 0,len=oBox.length;i<len;i++){
        oBox[i].style.width = 100/cLen+'%';
    }
    var EventUtil = {
        addEvent:function(ele,type,hander){
            if(ele.addEventListener){
                ele.addEventListener(type,hander,false);
            }else if(ele.attachEvent){
                ele.attachEvent('on'+type,hander);
            }else{
                ele['on'+type] = hander;
            }
        },
        getE:function(e){
            return e || window.event;
        },
        target:function(e){
            var event = EventUtil.getE(e);
            return  event.target || event.srcElement;
        }
    };
    var perEle = function(currentEle){
        if(currentEle.previousElementSibling)
            return currentEle.previousElementSibling
        var pre=currentEle.previousSibling;
        while(pre){
            if(pre.nodeType===1){
                return pre;
            }
            pre=pre.previousSibling;
        }
        return null;
    }
    var filter  = function(elem,cur,type,num){
        var val = perEle(cur).value;
        if(val == 0 || !val){
            elem.style.webkitFilter = type+0+num;
        }
        elem.style.webkitFilter = type+'('+val+''+num+')';
    };
    var getVal = function(e,type,num){
        e = e || window.event;
        var target = e.target ? e.target : e.srcElement;
        var oVal = target.value;
        if(oVal == 0){
            img.style.webkitFilter = type +'(0'+num+')';
        }
        img.style.webkitFilter = type +'('+oVal+''+num+')';
    }
    btnGroup.addEventListener('change',function(e){
        e = e || window.event;
        var tar = e.target ? e.target : e.srcElement;
        switch(tar.id){
            case 'blur':
                getVal(e,'blur','px');
                break;
            case 'brightness':
                getVal(e,'brightness','%');
                break;
            case 'contrast':
                getVal(e,'contrast','%');
                break;
            case 'grayscale':
                getVal(e,'grayscale','%');
                break;
            case 'huerotate':
                getVal(e,'hue-rotate','deg');
                break;
            case 'invert':
                getVal(e,'invert','%');
                break;
            case 'opacity':
                getVal(e,'opacity','%');
                break;
            case 'saturate':
                getVal(e,'saturate','%');
                break;
            case 'sepia':
                getVal(e,'sepia','%');
                break;
        }
    },false);
    btnGroupFlex.addEventListener('click',function(e){
        e = e || window.event;
        var tar = e.target ? e.target : e.srcElement;
        switch (tar.className){
            case 'align-item':
                dom.className = 'dome '+ tar.className;
                break;
            case 'justify-content':
                dom.className = 'dome '+ tar.className;
                break;
            case 'column':
                dom.className = 'dome ' + tar.className;
                break;
            case 'row-reverse':
                dom.className = 'dome ' + tar.className;
                break;
            case 'column-reverse':
                dom.className = 'dome ' + tar.className;
                break;
        }
    },false);
    oActive.addEventListener('click',function(){
        var oUl = document.getElementById('activeList');
        oUl.classList.add('letter');
    },false);
    var page = 1;
    document.addEventListener('keydown',function(e){
        e = e || window.event;
        var key = e.keyCode;
        if(key == 37 || key == 38){
            if(page <=0){
                page = 0;
                return false;
            }else{
                oPar.style.webkitTransform = 'translate3d('+'-'+(page-1)*(100/cLen)+'%'+',0,0)';
            }
            page--;
        }else if(key == 39 || key==40){
            if(page > cLen -1){
                page = cLen - 1;
                return false;
            }else{
                oPar.style.webkitTransform = 'translate3d('+(-page*(100/cLen))+'%'+',0,0)';
            }
            page++;
        }else{
            page = 1;
            return false;
        }
    });
    var oText = document.getElementById('text'),
        oLine = document.getElementById('line');
    oLine.addEventListener('keydown',function(e){
        e = e || window.event;
        var keyCode = e.keyCode;
        if(keyCode == 13){
            var oVal = this.value;
            oText.style.webkitLineClamp = oVal;
            oText.style.webkitBoxOrient = 'vertical';
            oText.style.textOverflow = 'ellipsis';
        }
    },false);
