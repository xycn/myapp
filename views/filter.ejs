        }
        .wrap .showbox .btn-group span{
            -webkit-box-flex:1;
            -ms-flex:1;
            -webkit-flex:1;
            flex:1;
            font-size:12px;
        }
        .wrap .showbox .btn-group input{
            width:80px;
        }
        .wrap .showbox .btn-group a{
            display:inline-block;
            margin-right:15px;
            padding:5px 10px;
            background:#b3d4fc;
            color:#fff;
            border-radius:5px;
            text-decoration: none;
        }
        #btnGroupFlex{
            position:absolute;
            bottom:100px;
        }
        .wrap .showbox .letter li::first-line{
            color:orangered;
        }
        .wrap .showbox .dome{
            display:-webkit-box;
            display:-webkit-flex;
            display:flex;
            height:100%;
        }
        /*主轴对齐方式*/
        .wrap .showbox .align-item{
            -webkit-box-align:center;
            -moz-box-align:center;
            -webkit-align-items:center;
            align-items:center;
        }
        /*侧轴对齐方式*/
        .wrap .showbox .justify-content{
            -webkit-box-pack:center;
            -moz-box-pack:center;
            -webkit-justify-content:center;
            justify-content:center;
        }
        /*翻转*/
        .wrap .showbox .row-reverse{
            -webkit-flex-flow:row-reverse;
            flex-flow: row-reverse;
        }
        .wrap .showbox .column-reverse{
            -webkit-flex-flow:column-reverse;
            flex-flow:column-reverse;
        }
        /*水平还是垂直显示flex布局*/
        .wrap .showbox .column{
            -webkit-flex-flow:column;
            flex-flow:column;
        }
        .wrap .showbox .dome .left{
